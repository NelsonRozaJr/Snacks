<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Snacks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light headerColor">
            <div class="container">
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        Snacks
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item w-100 mr-2">
                                <a class="btn btn-outline-dark w-100 my-2 my-lg-0" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                    Home
                                </a>
                            </li>
                            <li class="nav-item w-100 mr-2">
                                <a class="btn btn-outline-dark w-100 mb-2 mb-lg-0" asp-area="Admin" asp-controller="Category" asp-action="Index">
                                    Categorias
                                </a>
                            </li>
                            <li class="nav-item w-100 mr-2">
                                <a class="btn btn-outline-dark w-100 mb-2 mb-lg-0" asp-area="Admin" asp-controller="Snack" asp-action="Index">
                                    Produtos
                                </a>
                            </li>
                            <li class="nav-item w-100 mr-2">
                                <a class="btn btn-outline-dark w-100 mb-2 mb-lg-0" asp-area="Admin" asp-controller="Order" asp-action="Index">
                                    Pedidos
                                </a>
                            </li>
                            <li class="nav-item w-100 mr-2">
                                <a class="btn btn-outline-dark w-100 mb-2 mb-lg-0" asp-area="Admin" asp-controller="User" asp-action="Index">
                                    Usuários
                                </a>
                            </li>
                            <li class="nav-item w-100 mr-2">
                                <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post">
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-outline-dark w-100 ">
                                        Sair
                                    </a>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Snacks - <a asp-controller="Contact" asp-action="Index" class="text-dark text-decoration-none">Contato</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-meiomask/meiomask.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
