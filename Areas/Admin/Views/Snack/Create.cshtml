@model Snack

@{
    ViewData["Title"] = "Criar produto";
}

<div class="row">
    <div class="col-sm">
        <div class="p-1 text-dark text-center my-2 headerColor">
            <h4>
                <small>Criar produto</small>
            </h4>
        </div>
        <hr />
        <div id="validationSummary" asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
</div>

<form asp-area="Admin" asp-controller="Snack" asp-action="Create" method="post">
    <div class="form-row">
        <div class="form-group col-sm">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label asp-for="Price" class="control-label"></label>
            <input id="snackPrice" asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm">
            <label asp-for="SummaryDescription" class="control-label"></label>
            <textarea asp-for="SummaryDescription" class="form-control"></textarea>
            <span asp-validation-for="SummaryDescription" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label asp-for="FullDescription" class="control-label"></label>
            <textarea asp-for="FullDescription" class="form-control"></textarea>
            <span asp-validation-for="FullDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm">
            <div class="form-check">
                <input class="form-check-input" asp-for="IsFavoriteSnack" />
                <label class="form-check-label" for="IsFavoriteSnack">
                    @Html.DisplayNameFor(model => model.IsFavoriteSnack)
                </label>
            </div>
        </div>
        <div class="form-group col-sm">
            <div class="form-check">
                <input class="form-check-input" asp-for="InStock" />
                <label class="form-check-label" for="InStock">
                    @Html.DisplayNameFor(model => model.InStock)
                </label>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-6">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryItems"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm">
            <input type="submit" class="btn btn-outline-success float-right" style="margin-left:10px" value="Criar produto" />
            <a asp-action="Index" class="btn btn-outline-secondary float-right">Lista de produtos</a>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/js/currencyMask.js" asp-append-version="true"></script>
}